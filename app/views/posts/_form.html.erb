<%= form_with model: post do |form| %>
  <% if post.errors.any? %>
    <ul>
      <% post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :type_of_disaster %>
    <%= form.collection_check_boxes :disaster_ids, Disaster.all, :id, :name %>
  </div>
  <div>
    <%= form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>